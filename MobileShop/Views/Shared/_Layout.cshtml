<!DOCTYPE HTML>
<html lang="vi">
<head>
    <title>@ViewBag.Title | Mobile Shop</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link href="~/Assets/Common/bootstrap.min.css" rel="stylesheet" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Assets/Client/css/style.css" rel="stylesheet" type="text/css" media="all" />
    @RenderSection("style", false)
    <script type="text/javascript" src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Assets/Client/js/move-top.js"></script>
    <script type="text/javascript" src="~/Assets/Client/js/easing.js"></script>
</head>
<body>
    <div class="wrap">
        <div class="header">
            <div class="headertop_desc">
                @{Html.RenderAction("_HeaderTopDesc", "Layout"); }
            </div>
            <div class="header_top">
                @{Html.RenderPartial("_HeaderTop"); }
            </div>
            <div class="header_bottom">
               @{Html.RenderAction("_MainMenu", "Layout"); }
            </div>
        </div>
        @* Main Content *@
        @RenderBody()
        @* ===== *@
    </div>
    <div class="footer">
        @{Html.RenderAction("_Footer", "Layout"); }
    </div>
    <script type="text/javascript">
        $(document).ready(function () {
            $().UItoTop({ easingType: 'easeOutQuart' });
        });
    </script>
    <a href="#" id="toTop"><span id="toTopHover"> </span></a>
    @RenderSection("scripts", false)
</body>
</html>
