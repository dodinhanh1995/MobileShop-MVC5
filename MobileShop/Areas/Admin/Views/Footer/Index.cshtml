@model Model.EF.Footer

@{
    ViewBag.Title = "Quản lý footer";
}

<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">Quản lý footer</h2>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <!-- /.panel-heading -->
            <div class="panel-body">
                @using (Html.BeginForm("Edit", "Footer"))
                {
                    <p>
                        <button type="submit" id="btnUpdate" class="btn btn-outline btn-danger"><i class="fa fa-floppy-o" aria-hidden="true"></i> Cập nhật</button>
                    </p>
                    if (TempData["AlertMessage"] != null)
                    {
                        <div id="alertBox" class="alert alert-@TempData["AlertType"] text-center hide"> @Html.Raw(TempData["AlertMessage"])</div>
                    }
                    <table width="100%" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Content)</th>
                                <th>@Html.DisplayNameFor(model => model.Status)</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><textarea id="Content" name="Content">@Html.Raw(Model.Content)</textarea></td>
                                <td><a class="btn btn-outline btn-success" id="btnStatus">@(Model.Status == true ? "Hiển thị" : "Ẩn")</a></td>
                            </tr>
                        </tbody>
                    </table>
                }
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

@section scripts {
    <script src="~/Assets/Admin/controller/footer.js"></script>
}