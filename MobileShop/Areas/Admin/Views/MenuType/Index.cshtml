@model IEnumerable<Model.EF.MenuType>

@{
    ViewBag.Title = "Danh sách loại menu";
}

<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">Danh sách loại menu</h2>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <!-- /.panel-heading -->
            <div class="panel-body">
                @using (Html.BeginForm("Delete", "MenuType"))
                {
                    <p>
                        <button type="submit" onclick="return confirm('Bạn có chắc là muốn xóa không')" class="btn btn-danger"><i class="fa fa-trash"></i> Delete</button>
                        <button type="button" id="btnCreateNewMenuType" class="btn btn-default"><i class="fa fa-plus"></i> Create New</button>
                    </p>
                    if (TempData["AlertMessage"] != null)
                    {
                        <div id="alertBox" class="alert alert-@TempData["AlertType"] text-center hide"> @Html.Raw(TempData["AlertMessage"])</div>
                    }
                    <table width="100%" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>@Html.CheckBox("chkDeleteAll", new { id = "chkDeleteAll" })</th>
                                <th>@Html.DisplayNameFor(model => model.Name)</th>
                                <th>Chức năng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var menuType in Model)
                            {
                                <tr>
                                    <td>@Html.CheckBox("menuTypeId", htmlAttributes: new { @class = "chkFieldId", value = menuType.Id })</td>
                                    <td><input type="text" value="@menuType.Name" class="form-control" /></td>
                                    <td><button type="button" class="btn btn-outline btn-link editingMenuType" data-id="@menuType.Id"><i class="fa fa-edit"></i> Edit</button></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

@section scripts {
<script src="~/Assets/Admin/controller/menuType.js"></script>
    }