@model Model.EF.User

@{
    ViewBag.Title = "Cập nhật thông tin người dùng";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    <div class="form-horizontal">
        <h3>Cập nhật thông tin người dùng</h3>
        <hr />
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        <div class="form-group input-group">
            <span class="input-group-addon">@Html.LabelFor(model => model.UserName)</span>
            @Html.TextBoxFor(model => model.UserName,  new { @class = "form-control", @readonly="true"})
        </div>

        <div class="form-group input-group">
            <span class="input-group-addon">@Html.LabelFor(model => model.Password)</span>
            @Html.TextBoxFor(model => model.Password, new { @class = "form-control", type="password", @readonly = "true" })
        </div>

        <div class="form-group input-group">
            <span class="input-group-addon">@Html.LabelFor(model => model.FullName)</span>
            @Html.TextBoxFor(model => model.FullName, new { @class = "form-control" })
        </div>

        <div class="form-group input-group">
            <span class="input-group-addon">@Html.LabelFor(model => model.Address)</span>
            @Html.TextAreaFor(model => model.Address, new { @class = "form-control" })
        </div>

        <div class="form-group input-group">
            <span class="input-group-addon">@Html.LabelFor(model => model.Email)</span>
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
        </div>

        <div class="form-group input-group">
            <span class="input-group-addon">@Html.LabelFor(model => model.Phone)</span>
            @Html.TextBoxFor(model => model.Phone, new { @class = "form-control" })
        </div>

        <div class="form-group input-group">
            <span class="input-group-addon">@Html.LabelFor(model => model.Status)</span>
            @Html.DropDownListFor(model => model.Status, null, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-floppy-o" aria-hidden="true"></i> Lưu lại
            </button>
        </div>
    </div>
}

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
