@model IEnumerable<Model.EF.User>

@{
    ViewBag.Title = "Danh sách người dùng";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Danh sách người dùng</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">

            <!-- /.panel-heading -->
            <div class="panel-body">
                @using (Html.BeginForm("Delete", "User"))
                {
                    <p>
                        <button type="submit" onclick="return confirm('Bạn có chắc là muốn xóa không')" class="btn btn-danger"><i class="fa fa-trash"></i> Delete All</button>
                        <a href="@Url.Action("Create")" class="btn btn-default"><i class="fa fa-plus"></i> Create New</a>
                    </p>
                    <table width="100%" class="table table-striped table-bordered table-hover">

                        <thead>
                            <tr>
                                <th>@Html.CheckBox("chkDeleteAll", new { id = "chkDeleteAll" })</th>
                                <th>@Html.DisplayNameFor(model => model.UserName)</th>
                                <th>@Html.DisplayNameFor(model => model.FullName)</th>
                                <th>@Html.DisplayNameFor(model => model.Address)</th>
                                <th>@Html.DisplayNameFor(model => model.Email)</th>
                                <th>@Html.DisplayNameFor(model => model.Phone)</th>
                                <th>@Html.DisplayNameFor(model => model.CreatedDate)</th>
                                <th>@Html.DisplayNameFor(model => model.CreatedBy)</th>
                                <th>@Html.DisplayNameFor(model => model.Status)</th>
                                <td>Chức năng</td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>@Html.CheckBox("userId", htmlAttributes: new { @class = "chkUserId", value = user.Id })</td>
                                    <td>@user.UserName</td>
                                    <td>@user.FullName</td>
                                    <td>@user.Address</td>
                                    <td>@user.Email</td>
                                    <td>@user.Phone</td>
                                    <td>@user.CreatedDate.Value.ToString("dd/MM/yyyy")</td>
                                    <td>@user.CreatedBy</td>
                                    <td>@(user.Status == 1 ? "Kích hoạt" : (user.Status == 0 ? "Chưa kích hoạt" : "Tạm khóa"))</td>
                                    <td><a class="" href="@Url.Action("Edit", new { id = user.Id })"><i class="fa fa-edit"></i> Edit</a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                }
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

@section scripts{
    <script>
        $(document).ready(function () {
            $('#chkDeleteAll').click(function () {
                if ($(this).is(":checked"))
                    $('.chkUserId').prop('checked', true);
                else
                    $('.chkUserId').prop('checked', false);
            });
        });
    </script>
}
